@model ControleDePatrimonios.Models.Patrimonio;

@{
    ViewData["Title"] = "Novo Patrimônio";
}

<h1>@ViewData["Title"]</h1>

<h4>Patrimônio</h4>
<hr/>
<div class="row">
    <div class="Col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />

                <label asp-for="MarcaID" class="control-label"></label>
                <input asp-for="MarcaID" class="form-control" />

                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />

                <label asp-for="NumeroTombo" class="control-label"></label>
                <input asp-for="NumeroTombo" class="form-control" />
            </div>
            <div>
                <input type="submit" value="Salvar" class="btn btn-light" />

            </div>
        </form>

    </div>

</div>
