@model ControleDePatrimonios.Models.Patrimonio

@{
    ViewData["Title"] = "Delete";
}

<h1>@ViewData["Title"]</h1>

<h3>Tem certeza que deseja apagar o patrimônio abaixo?</h3>

<div>
    <h4>Patrimonio</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome);
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome);
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.marca);
        </dt>
        <dd>
            @Html.DisplayFor(model => model.marca.Nome);
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Descricao);
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Descricao);
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.NumeroTombo);
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NumeroTombo);
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" />
        <a asp-action="Index"> <input type="button" value="Não" class="btn btn-dark" asp-action="Index" /> </a>
    </form>
</div>